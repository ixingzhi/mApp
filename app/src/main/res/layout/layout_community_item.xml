<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="开箱视频，一加3开箱视频,哈哈哈哈"
            android:textSize="20dp"/>

        <RelativeLayout
            android:layout_above="@id/img_headImg"
            android:layout_width="260dp"
            android:layout_height="20dp">

            <TextView
                android:id="@+id/tv_from"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="来自:"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tv_fromUrl"
                android:layout_toRightOf="@id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="oneplus.cn"/>

        </RelativeLayout>


        <com.example.xiedongdong.app02.util.CircleImageView
            android:id="@+id/img_headImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/img_title3"/>
        <TextView
            android:id="@+id/tv_share"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/img_headImg"
            android:text="分享于"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/tv_time"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:text="2016/06/28"
            android:textSize="12dp"/>

        <ImageView
            android:id="@+id/img_title"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/img_title3"/>




    </RelativeLayout>

</LinearLayout>