<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="开箱视频，一加3开箱视频，内涵段子"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tv_from"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来自:"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/tv_fromUrl"
            android:layout_marginTop="3dp"
            android:layout_below="@id/tv_title"
            android:layout_toRightOf="@id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.zealer.com"
            android:textSize="12dp"/>


        <com.example.xiedongdong.app02.util.CircleImageView
            android:id="@+id/img_headImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/img_title3"/>
        <TextView
            android:id="@+id/tv_share"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/img_headImg"
            android:text="分享于"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/tv_time"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:text="2016/06/28"
            android:textSize="12dp"/>

        <ImageView
            android:id="@+id/img_title"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@mipmap/img_title3"/>

        <TextView
            android:paddingBottom="5dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"/>
        

    </RelativeLayout>


</LinearLayout>